<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background_gradient"

    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/one"
        android:contentDescription="Onboarding Image" />

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop the latest trends"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover top brands, trending products, and special offers for your style."
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center" />
</LinearLayout>
