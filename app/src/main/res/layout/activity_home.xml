<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_background_gradient">

    <!-- Top Toolbar -->
    <include layout="@layout/toolbar_skillrout" />

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Motivational Line -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empower your future by learning one skill at a time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="1dp"
                android:paddingBottom="12dp" />

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search skills..."
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:background="@drawable/search_bar_bg"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Repeated Motivational Line -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empower your future by learning one skill at a time"
                android:textSize="14sp"
                android:textColor="#555555"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Tip Box -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ Tip: Practice 30 mins daily on real projects"
                android:padding="12dp"
                android:textColor="#000000"
                android:background="@drawable/tip_card_bg"
                android:textSize="14sp" />

            <!-- Continue Learning Card -->
            <LinearLayout
                android:id="@+id/continueLearningCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/continue_card_bg"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue learning: Python"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Category Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layoutAnimation="@anim/layout_fall_down">

                <include layout="@layout/card_category_development" />
                <include layout="@layout/card_category_programing" />
                <include layout="@layout/card_category_tech_domain" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
