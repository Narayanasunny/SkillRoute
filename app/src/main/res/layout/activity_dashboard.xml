<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:background="@drawable/dashboard_bg"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:src="@drawable/python"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />


        <!-- SkillRoute Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="SkillRoute"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            android:shadowColor="#55000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textColor="#FF000000"/>

        <!-- Roadmap Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="#FFFFFF"
                android:padding="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/r_img"/>

                <TextView
                    android:id="@+id/roadmapHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:text="Roadmap"
                    android:textColor="#000000"
                    android:textSize="24sp"
                     />

                <LinearLayout
                    android:id="@+id/roadmapContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        style="@style/TagStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OOP"
                        style="@style/TagStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collections"
                        style="@style/TagStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android"
                        style="@style/TagStyle" />
                </LinearLayout>

                <Button
                    android:id="@+id/viewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- YouTube Playlists Section -->
        <!-- Parent Card -->

        <!-- YouTube Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/youtubeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <!-- YouTube Header -->
                <LinearLayout
                    android:id="@+id/youtubeHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/y_img"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="YouTube Playlists"
                        android:fontFamily="@font/abril_fatface"
                        android:textSize="24sp"

                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/youtubeArrow"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>

                <!-- Dropdown Content -->
                <LinearLayout
                    android:id="@+id/youtubeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <!-- Hindi Section Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="#FFFFFF">

                            <!-- Hindi Header -->
                            <LinearLayout
                                android:id="@+id/hindiHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Hindi"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />

                                <ImageView
                                    android:id="@+id/hindiArrow"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_arrow_down" />
                            </LinearLayout>

                            <!-- Hindi Content: Scrollable Grid -->
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none"
                                android:fillViewport="true"
                                android:visibility="gone"
                                android:id="@+id/hindiScrollView">

                                <GridLayout
                                    android:id="@+id/hindiContent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:columnCount="3"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp">

                                    <!-- Card 1 -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardHarry"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="4dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="CodeWithHarry"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <!-- Card 2 -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardApna"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Apna College"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <!-- Card 3 -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardcollegewala"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="College Wala"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </GridLayout>
                            </HorizontalScrollView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- English Section Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="#FFFFFF">

                            <!-- English Header -->
                            <LinearLayout
                                android:id="@+id/englishHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="English"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />

                                <ImageView
                                    android:id="@+id/englishArrow"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_arrow_down" />
                            </LinearLayout>

                            <!-- English Content: Horizontal Scroll -->
                            <HorizontalScrollView
                                android:id="@+id/englishScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:scrollbars="none"
                                android:fillViewport="true"
                                android:layout_marginTop="8dp">

                                <GridLayout
                                    android:id="@+id/englishContent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:columnCount="3"
                                    android:orientation="horizontal"
                                    android:paddingBottom="8dp">

                                    <!-- Card 1 -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardFCC"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="freeCodeCamp"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <!-- Card 2 -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardTraversy"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Traversy Media"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </GridLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- Telugu Section Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="#FFFFFF">

                            <!-- Telugu Header -->
                            <LinearLayout
                                android:id="@+id/teluguHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Telugu"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000" />

                                <ImageView
                                    android:id="@+id/teluguArrow"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_arrow_down" />
                            </LinearLayout>

                            <!-- Telugu Content: Horizontal Scroll -->
                            <HorizontalScrollView
                                android:id="@+id/teluguScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:scrollbars="none"
                                android:fillViewport="true"
                                android:layout_marginTop="8dp">

                                <GridLayout
                                    android:id="@+id/teluguContent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:columnCount="2"
                                    android:orientation="horizontal"
                                    android:paddingBottom="8dp">

                                    <!-- Card: Telugu Skill -->
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardTelugu"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:background="#FFFFFF"
                                            android:padding="12dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/img" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Telugu Skill"
                                                android:textStyle="bold"
                                                android:textColor="#000000"
                                                android:layout_marginTop="8dp" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </GridLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        //WEBSITES
        <androidx.cardview.widget.CardView
            android:id="@+id/websiteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:id="@+id/websiteHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/w_img"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Websites"
                        android:textSize="24sp"
                        android:fontFamily="@font/abril_fatface"

                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/websiteArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>

                <!-- Dropdown Content with Inner Cards -->
                <LinearLayout
                    android:id="@+id/websiteDropdownLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="#FFFFFF"
                    android:paddingTop="12dp"
                    android:layout_marginTop="8dp">

                    <!-- Item 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="12dp"
                        card_view:cardElevation="6dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#FFFFFF"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="GeeksForGeeks"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/openGeeks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN"
                                android:textStyle="bold"
                                android:textColor="#2196F3"
                                android:padding="6dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Item 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="12dp"
                        card_view:cardElevation="6dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#FFFFFF"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="W3Schools"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/openW3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN"
                                android:textStyle="bold"
                                android:textColor="#2196F3"
                                android:padding="6dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //projects
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header with dropdown button -->
                <LinearLayout
                    android:id="@+id/ProjectHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/l_img"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Python Projects"
                        android:fontFamily="@font/abril_fatface"
                        android:textSize="24sp"

                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/dropdownIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>

                <!-- Hidden list -->
                <LinearLayout
                    android:id="@+id/dropdownContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Face Detection App"
                        android:textSize="16sp"
                        android:textColor="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Weather Forecast App"
                        android:textSize="16sp"
                        android:textColor="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Chatbot using Python"
                        android:textSize="16sp"
                        android:textColor="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• AI Virtual Assistant"
                        android:textSize="16sp"
                        android:textColor="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Django Web App"
                        android:textSize="16sp"
                        android:textColor="#444444" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
