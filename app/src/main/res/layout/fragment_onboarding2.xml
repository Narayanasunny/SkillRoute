<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/logo_background_gradient">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/one"
        android:contentDescription="Onboarding Image 2" />

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Effortlessly"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy seamless browsing, secure payments, and safe order tracking."
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center" />
</LinearLayout>
